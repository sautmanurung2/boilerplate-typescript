{
   "name": "boilerplate-express",
   "version": "0.0.1",
   "author": "Saut Kristian Wiratama Manurung",
   "description": "Awesome project developed with TypeORM, Express Typescript, Jest, Supertest, Husky, Biome.js, and more.",
   "type": "commonjs",
   "scripts": {
      "build": "tsup",
      "start": "ts-node src/index.ts",
      "typeorm": "typeorm-ts-node-commonjs",
      "dev": "tsx watch --clear-screen=false src/infrastructure/server/server.ts",
      "test": "jest --coverage",
      "clean": "rimraf dist coverage",
      "lint": "biome check src/",
      "lint:fix": "biome check src/ --fix",
      "format": "biome format src/",
      "prepare": "husky"
   },
   "dependencies": {
      "dotenv": "^16.4.7",
      "express": "^4.21.2",
      "joi": "^17.13.3",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.20"
   },
   "devDependencies": {
      "@biomejs/biome": "1.9.4",
      "@types/dotenv": "^6.1.1",
      "@types/express": "^5.0.0",
      "@types/jest": "^29.5.14",
      "@types/node": "^16.11.10",
      "@types/pg": "^8.11.10",
      "@types/supertest": "^6.0.2",
      "@types/uuid": "^10.0.0",
      "husky": "^9.1.7",
      "jest": "^29.7.0",
      "supertest": "^7.0.0",
      "ts-jest": "^29.2.5",
      "ts-node": "10.9.1",
      "tsup": "^8.3.5",
      "tsx": "^4.19.2",
      "typescript": "4.5.2"
   },
   "lint-staged": {
      "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
         "biome check --apply --no-errors-on-unmatched"
      ]
   },
   "tsup": {
      "entry": [
         "src",
         "!src/**/__tests__/**",
         "!src/**/*.test.*"
      ],
      "splitting": false,
      "sourcemap": true,
      "clean": true
   }
}
